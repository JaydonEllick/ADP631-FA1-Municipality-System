@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to the Municipality Management System</h1>
    <p class="lead">Manage citizens, service requests, staff, and reports efficiently.</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h3>Citizen Management</h3>
                <p>View and manage citizen records.</p>
                <a href="@Url.Action("Index", "CitizenManagementModels")" class="btn btn-primary">Go to Citizens</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h3>Service Requests</h3>
                <p>Track and update service requests.</p>
                <a href="@Url.Action("Index", "ServiceRequestModels")" class="btn btn-success">Go to Requests</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h3>Reports</h3>
                <p>Review submitted reports.</p>
                <a href="@Url.Action("Index", "ReportsModels")" class="btn btn-warning">Go to Reports</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm p-3">
                <h3>Staff Management</h3>
                <p>Manage municipal staff records.</p>
                <a href="@Url.Action("Index", "StaffManagementModels")" class="btn btn-info">Go to Staff</a>
            </div>
        </div>
    </div>
</div>